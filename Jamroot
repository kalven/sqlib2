project sqlib2
    : requirements
        <variant>debug:<define>SQLIB_TRACING ;

import testing ;

ext_libs = dl pthread sqlite3 ;

lib $(ext_libs) ;

alias sqlib2 : $(ext_libs) : : : <include>. <cxxflags>-std=c++0x ;

unit-test basic_test : tests/basic_test.cpp sqlib2 ;
unit-test db_test    : tests/db_test.cpp sqlib2 ;
